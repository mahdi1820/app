<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">


    <Button
        android:id="@+id/already_have_account_button"
        android:layout_width="307dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-242dp"
        android:fontFamily="@font/prompt"
        android:text="Already Have An Account"
        android:textSize="12sp"
        app:backgroundTint="@color/accent"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/already_have_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:text="Get Started"
        app:cornerRadius="20dp"
        android:fontFamily="@font/prompt"
        app:backgroundTint="@color/accent"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="225dp"
        android:layout_height="408dp"
        app:srcCompat="@drawable/pizza" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="187dp"
        android:layout_height="537dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="-202dp"
        android:layout_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/patates" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="286dp"
        android:layout_height="331dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginBottom="-264dp"
        app:srcCompat="@drawable/soda" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="281dp"
        android:layout_height="67dp"
        android:layout_above="@+id/already_have_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/primary_dark"
        android:fontFamily="@font/prompt"
        android:textSize="34sp" />


</RelativeLayout>